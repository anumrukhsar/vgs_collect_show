<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <com.verygoodsecurity.vgsshow.widget.VGSTextView
        android:id="@+id/tvCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:contentPath="json.payment_card_number"
        app:hint="Card number"
        app:hintTextColor="@color/colorPrimary"
        app:textColor="@color/colorPrimaryDark"
        app:textSize="16dp"
        tools:ignore="SpUsage" />

    <com.verygoodsecurity.vgsshow.widget.VGSTextView
        android:id="@+id/tvCardHolderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:contentPath="json.payment_person_name"
        app:hint="Card Holder Name"
        app:hintTextColor="@color/colorPrimary"
        app:textColor="@color/colorPrimaryDark"
        app:textSize="16dp"
        tools:ignore="SpUsage" />
    <com.verygoodsecurity.vgsshow.widget.VGSTextView
        android:id="@+id/tvCardExpiration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:contentPath="json.payment_card_expiration_date"
        app:hint="Expiration date"
        app:hintTextColor="@color/colorPrimary"
        app:textColor="@color/colorPrimaryDark"
        app:textSize="16dp"
        tools:ignore="SpUsage" />
    <com.verygoodsecurity.vgsshow.widget.VGSTextView
        android:id="@+id/tvCardCvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:contentPath="json.payment_card_cvc"
        app:hint="CVC"
        app:hintTextColor="@color/colorPrimary"
        app:textColor="@color/colorPrimaryDark"
        app:textSize="16dp"
        tools:ignore="SpUsage" />
    <com.verygoodsecurity.vgsshow.widget.VGSTextView
        android:id="@+id/tvCardSSn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:contentPath="json.payment_card_ssn"
        app:hint="Expiration date"
        app:hintTextColor="@color/colorPrimary"
        app:textColor="@color/colorPrimaryDark"
        app:textSize="16dp"
        tools:ignore="SpUsage" />
</LinearLayout>